{{input value=project.name name=project_name}}
<button {{action 'save' project}} disabled={{if canSave null 'disabled'}}>Save</button>
<br><br>
<h3>Owner</h3>
{{project.owner.username}}
<br>
<h3>Member</h3>
{{#each project.members as |member|}}
  {{member.username}}

  {{#if canKick }}
    <button {{action 'kickMember' member}} class='kick-button'>Kick</button>
  {{/if}}

  {{#if canAssign }}
    <button {{action 'assignOwner' member}} class='assign-button'>Assign</button>
  {{/if}}
  <br>
{{/each}}
<form {{action 'save' member on='submit'}}>
	<fieldset class="form-group">
	  <label for="projectName">Add member</label>
	  {{ input type="project-name" class="form-control" id="projectName" placeholder="Name"  }}
	  <button type="submit" class="btn btn-primary">Add</button>
	</fieldset>
</form>
<br><br>

<button {{action 'destroy' project}}>Delete</button>

{{projects.upload-form project=project}}